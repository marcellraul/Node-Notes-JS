<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center">Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT " method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" value="{{note.title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" rows="4">{{note.description}}</textarea>
                </div>
                <button type="submit" class="btn btn-success btn-block btn-sm">Save <i class="fas fa-save"></i></button>
            </form>
        </div>
    </div>
</div>
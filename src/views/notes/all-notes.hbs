<div class="row">
    {{#each notes}}
    <div class=" col-md-4 ">
        <div class="card border-success mb-3" style="max-width: 20rem;">
            <div class="card-header d-flex justify-content-between ">
                <div class="text-center">
                    <h3>{{title}}</h3>
                </div>
                <a href="/notes/edit/{{_id}}"> <i class="far fa-edit "></i> </a>
            </div>
            <div class="card-body">
                <p class="card-text">{{description}} </p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <button type="submit"
                        class="btn btn-danger btn-block btn-sm justify-content-between align-items-center">Delete <i
                            class=" fas fa-trash-alt"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
   
    <div class="card mx-auto">
        <div class="card-body">
            <h2>Hello, {{name}}!</h2>
            <p class="lead"> There ara not notes yet</p>
            <a href="/notes/add" class="btn btn-primary btn-block btn-sm">Create One!</a>
        </div>
    </div>
    {{/each}}
</div>
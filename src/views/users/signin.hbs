<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header"><h3 class="text-center">Login</h3></div>
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="email" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="pass" placeholder="Password" value="{{pass}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block ">Sign In</button>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>